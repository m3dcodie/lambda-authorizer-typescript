{
    "compilerOptions": {
        "target": "es2020",
        "module": "node16",
        "moduleResolution": "node16",
        "strict": true,
        "preserveConstEnums": true,
        "noEmit": true,
        "sourceMap": false,        
        "esModuleInterop": true,
        "importHelpers": true,
        "declaration": true,
        "inlineSourceMap": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}